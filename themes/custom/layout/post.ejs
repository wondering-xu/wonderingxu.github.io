<article class="post">
  <header class="post-header">
    <% if (page.title) { %>
    <h1 class="post-title"><%= page.title %></h1>
    <% } %>
    <% if (page.date) { %>
    <time class="post-date" datetime="<%= date(page.date, 'YYYY-MM-DD') %>"><%= date(page.date, 'YYYY-MM-DD') %></time>
    <% } %>
  </header>
  <div class="post-body">
    <%- page.content %>
  </div>
</article>
